<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mystyles="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccc">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:layout_weight=".10">

        <com.tekscholar.androidclient.ZoomSurface
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/zoom_surfaceView"
            android:layout_marginLeft="0dp"
            android:layout_weight=".10"/>

        <com.tekscholar.androidclient.VerticalSeekBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/seekBar"
            android:layout_gravity="bottom"
            android:layout_weight=".90"
            android:layout_marginLeft="0dp"
            android:progressDrawable="@android:color/transparent"
            android:paddingTop="5dp"
            android:thumbOffset="0dp"
            android:thumb="@drawable/trigger_arrow_white_50x50"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/tektronix"
        android:layout_weight=".90">

        <com.tekscholar.androidclient.MultiImageSwitch
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:layout_weight="1"
            android:id="@+id/multiSwitch1"
            mystyles:image_count="3"
            mystyles:image0="@drawable/tek_button_1_gray"
            mystyles:image1="@drawable/tek_button_1_color"
            mystyles:image2="@drawable/tek_button_1_less_color"
            />

        <com.tekscholar.androidclient.MultiImageSwitch
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:layout_weight="1"
            android:id="@+id/multiSwitch2"
            mystyles:image_count="3"
            mystyles:image0="@drawable/tek_button_2_gray"
            mystyles:image1="@drawable/tek_button_2_color"
            mystyles:image2="@drawable/tek_button_2_less_color"
            />

        <com.tekscholar.androidclient.MultiImageSwitch
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:layout_weight="1"
            android:id="@+id/multiSwitch3"
            mystyles:image_count="3"
            mystyles:image0="@drawable/tek_button_3_gray"
            mystyles:image1="@drawable/tek_button_3_color"
            mystyles:image2="@drawable/tek_button_3_less_color"
            />

        <com.tekscholar.androidclient.MultiImageSwitch
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New Button"
            android:layout_weight="1"
            android:id="@+id/multiSwitch4"
            mystyles:image_count="3"
            mystyles:image0="@drawable/tek_button_4_gray"
            mystyles:image1="@drawable/tek_button_4_color"
            mystyles:image2="@drawable/tek_button_4_less_color"
            />

    </LinearLayout>

</LinearLayout>